$(document).ready(function(){

	$("#show-details > span").on("click", function(){
		$(this).parent().hide();
		$("#theory").slideDown(400);
		$("#tests").slideDown(800);
		$("#problems").slideDown(1200);
		$("#hide-details").slideDown(1600);
	})

	$("#hide-details > span").on("click", function(){
		$(this).parent().slideUp();
		$("#theory").slideUp(400);
		$("#tests").slideUp(800);
		$("#problems").slideUp(1200);
		$("#show-details").slideDown(1600);
	})


});